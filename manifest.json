{
  "manifest_version": 3,
  "name": "Korean Subtitle Translator",
  "version": "1.0.0",
  "description": "Real-time Korean-to-English subtitles for video content",
  "permissions": [
    "activeTab",
    "tabCapture",
    "storage",
    "scripting",
    "offscreen"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*",
        "https://youtube.com/*",
        "https://m.youtube.com/*",
        "https://www.vlive.tv/*",
        "https://vlive.tv/*",
        "https://www.twitch.tv/*",
        "https://player.vimeo.com/*",
        "https://vimeo.com/*"
      ],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Korean Subtitle Translator"
  },
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon16.png",
    "19": "icons/icon19.png",
    "32": "icons/icon32.png",
    "38": "icons/icon38.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["content.css", "icons/*", "offscreen.html"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' https://translate.googleapis.com https://api.openai.com;"
  }
}